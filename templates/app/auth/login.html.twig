{% extends 'auth.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card-group d-block d-md-flex row">
                    <div class="card col-md-7 p-4 mb-0">
                        <div class="card-body">
                            {% include '_flashes.html.twig' %}

                            <h1>Log In</h1>

                            <p class="text-muted">Sign In to your account</p>
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <form method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="input-group mb-3 mt-3">
                                    <span class="input-group-text">
                                        <i class="icon icon-lg cil-envelope-closed"></i>
                                    </span>
                                    <input class="form-control" type="email" name="email" value="{{ last_username }}"
                                           placeholder="Email"/>
                                </div>

                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <i class="icon icon-lg cil-lock-locked"></i>
                                    </span>
                                    <input class="form-control" type="password" name="password" placeholder="Password">
                                </div>

                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="checkbox" name="_remember_me"
                                           id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        <span class="text-muted">Remember me</span>
                                    </label>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-lg btn-outline-dark px-3 py-1" type="submit">Login
                                        </button>
                                    </div>
                                    <div class="col-6 text-end">
                                        <a class="btn btn-link px-0" href="{{ path('auth.reset') }}">
                                            Forgot password?
                                        </a>
                                    </div>
                                </div>
                            </form>
                            <hr/>
                            <div class="row">
                                <div class="col-12">
                                    <a class="btn btn-outline-dark me-1" href="{{ path('oauth.github') }}">
                                        <div class="icon me-1">
                                            <i class="cib-github"></i>
                                        </div>
                                        GitHub
                                    </a>
                                    <a class="btn btn-outline-dark" href="{{ path('oauth.facebook') }}">
                                        <div class="icon me-1">
                                            <i class="cib-facebook"></i>
                                        </div>
                                        Facebook
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card col-md-5 text-white py-5" style="background: #3c4b64">
                        <div class="card-body text-center">
                            <div>
                                <h2>Sign up</h2>
                                <p>Don't have an account? Please register.</p>
                                <a class="btn btn-lg btn-outline-light mt-3"
                                   href="{{ path('auth.signup') }}">Register
                                    Now!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}